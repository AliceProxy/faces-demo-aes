---
apiVersion: v1
kind: Service
metadata:
  name: composite
  namespace: faces
spec:
  type: ClusterIP
  selector:
    service: composite
  ports:
  - port: 80
    targetPort: http
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: composite
  namespace: faces
spec:
  replicas: 1
  selector:
    matchLabels:
      service: composite
  template:
    metadata:
      labels:
        service: composite
    spec:
      containers:
      - name: composite
        image: DEV_REGISTRY/faces-service:FACES_SERVICE_VERSION
        imagePullPolicy: Always
        ports:
        - name: http
          containerPort: 8000
        env:
        - name: FACES_SERVICE
          value: "composite"
        - name: ERROR_FRACTION
          value: "20"
        # - name: DELAY_BUCKETS
        #   value: "0,5,10,15,20,50,200,500,1500"
